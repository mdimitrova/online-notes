.text-center
  %h1 Register

  = if locals[:register_error] #FIXME
    %p.spacer Incorrect register data. Try again

  %form.horizontal{ method: "post", role: "form"}
    .form-group
      %label{ for: "username" } Username:
      %input.form-control{ id: "username", type: "text", name: "username" }
    .form-group
      %label{ for: "email" } Email:
      %input.form-control{ id: "email", type: "text", name: "email" }
    .form-group
      %label{ for: "password" } Password:
      %input.form-control{ id: "password", type: "password", name: "password" }
    .form-group
      %label{ for: "retype_password" } Retype password:
      %input.form-control{ id: "retype_password", type: "password", name: "retype_password" }
    %button.btn{ type: "submit" } Register
